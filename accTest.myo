function accel(y)
 	if myo.getArm() == "right" then
	 	if y > -0.2 then
	 	myo.debug("right jump called")
	 		jump()
	 	end
	else
	 	if y < 0.3 then
	 		myo.debug("left jump")
	 		jump()
	 	end
	 end
 end

function onPoseEdge(pose, edge)
	if edge == "on" then 
		if pose == "doubleTap" then 
			if myo.isUnlocked() == true then
				myo.lock()
			end
		end

		if pose == "fingersSpread" then
			myo.keyboard("down_arrow", "down")	
		end

		if pose == "fist" then
			myo.debug("fisting")
			--myo.keyboard("up_arrow", "down")
			--jump()
			
		end

		if pose == "waveIn" then
			--myo.debug("wave in")
			changeGameDiff(1)
		end
		if pose == "waveOut" then
			--myo.debug("wave out")
			changeGameDiff(0)
		end
	end
	
	if pose == "rest" then
		--myo.keyboard("up_arrow", "up")
		myo.keyboard("down_arrow", "up")
		myo.keyboard("left_arrow", "up")
		myo.keyboard("right_arrow", "up")
		myo.unlock("hold")
	end
end

function changeGameDiff(x)
	myo.debug("game change diff")
	if x == "1" then
		myo.keyboard("u")
	elseif x == "0" then 
		myo.keyboard("d")
	end
end